<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.dashuang.xinyuan.xinyuanweather.fragment.ReportSettingFragment">

    <TextView
        android:text="语音播报"
        android:textSize="25sp"
        android:textColor="@color/textColorPrimary"
        android:id="@+id/tv_setting_voice_report_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/tv_setting_voice_report_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ListView
        android:id="@+id/lv_report_city"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    </LinearLayout>

</RelativeLayout>
